@using TrendOl.Entities
@model MyUser
@{
    ViewBag.Title = "Your Profile";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



	<div class="container">
		
			<h2>@ViewBag.Title</h2>
			<hr />
		

		<div class="row">
			<div class="col-md-2">

				

				<img src="~/Content/images/avatars/@(Model.UserImage)" class="rounded-circle" width="128" height="128" />

			</div>
			<div class="col-md-8">
				<h3>
					@(Model.Name + " " + @Model.Surname)
				</h3>
				<br />
				<h6><b>Username: </b> @Model.Username</h6>
				<h6><b>E-Mail: </b> @Model.Email</h6>
				<br />
				<h6><a href="#">More...</a></h6>
			</div>
			<div class="col-md-2 text-right">
				<!-- Example single danger button -->
				<div class="btn-group dropleft">
					<button type="button" class="btn btn-primary dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
						Options
					</button>
					<div class="dropdown-menu">
						<a class="dropdown-item" href="#">Edit Profile</a>
						<div class="dropdown-divider"></div>
						<a class="dropdown-item" href="#">Delete Profile</a>
					</div>
				</div>
			</div>
		</div>


	</div>

