@using TrendOl.Entities
@model MyUser
@{
	ViewBag.Title = "Your Profile";
	Layout = "~/Views/Shared/_Layout.cshtml";
}



	<div class="container mt-2">
		
		

		<div class="row mr-1 ml-1">
			<div class="col-md-2 d-flex justify-content-center ">

				

				<img src="~/images/avatars/@(Model.UserImage)" class="rounded-circle shadow p-3 mb-5 bg-white rounded" width="200" height="200" />

			</div>
			<div class="col-md-8">
				<h3>
					@(Model.Name + " " + @Model.Surname)
				</h3>
				<br />
				<h6><b>Username: </b> @Model.Username</h6>
				<h6><b>E-Mail: </b> @Model.Email</h6>
				
				@{
				if (Model.Gender == null)
					{
					<h6><b>Gender: </b>Undefined</h6>
					}
					else
					{
					<h6><b>Gender: @Model.Gender </b></h6>
					}
				}
				<br />
				<h6><a href="#">More...</a></h6>
			</div>
			<div class="col-md-2 text-right">
				<!-- Example single danger button -->
				<div class="btn-group dropleft">
					<button type="button" class="btn btn-primary dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
						Options
					</button>
					<div class="dropdown-menu">
						<a class="dropdown-item" href="@Url.Action("EditProfile")">Edit Profile</a>
						<div class="dropdown-divider"></div>
						<a class="dropdown-item" href="@Url.Action("DeleteProfile")" onclick="return confirm('Are you sure about to delete this account?');">Delete Profile</a>
					</div>
				</div>
			</div>
		</div>


	</div>

