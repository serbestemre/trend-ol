@using TrendOl.Entities.ValueObjects
@model LoginViewModel


@{ 
	ViewBag.Title = "Login Page";
	Layout = "~/Views/Shared/_Layout.cshtml";
}


	<div class="row">
		<div class="col-md-4 offset-md-4" >
			<div class="card">
				<article class="card-body">
					<h4 class="card-title text-center mb-4 mt-1">Log-in Page</h4>
					<hr>
					<p class="text-success text-center">TrendOl Login Form</p>
					
						@using (Html.BeginForm())
						{
							<div class="form-group">
								<div class="input-group">
									<div class="input-group-prepend">
										<span class="input-group-text"> <i class="fa fa-user"></i> </span>
									</div>
									@Html.TextBoxFor(model => model.Username, new { @class = "form-control", placeholder = "Username", type="text" })
								</div> <!-- input-group.// -->
							</div> <!-- form-group// -->
							<div class="form-group">
								<div class="input-group">
									<div class="input-group-prepend">
										<span class="input-group-text"> <i class="fa fa-lock"></i> </span>
									</div>
									@Html.TextBoxFor(model => model.Password, new { @class = "form-control", placeholder = "******", type = "password" })
								</div> <!-- input-group.// -->
							</div> <!-- form-group// -->
							<div class="form-group">
								<button type="submit" class="btn btn-primary btn-block"> Login  </button>
							</div> <!-- form-group// -->
							<p class="text-center"><a href="#" class="btn">Forgot password?</a></p>
						}
					</article>
			</div>
		</div>
	</div>


